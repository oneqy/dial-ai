<body>

<div class="chat-container">
    <div class="chat-header">
        <h2>Dial AI</h2>
        <p>تطوير ضياء | سريع جداً عبر Groq</p>
    </div>
    <div class="chat-box" id="chatBox">
        <div class="message bot">أهلاً ضياء! أنا Dial، أعمل الآن عبر محرك Groq الخارق. كيف يمكنني مساعدتك؟</div>
    </div>
    <div class="chat-input">
        <input type="text" id="userInput" placeholder="اكتب سؤالك هنا..." onkeypress="if(event.key==='Enter') sendMessage()">
        <button onclick="sendMessage()">إرسال</button>
    </div>
</div>

<script>
    // مفتاح Groq الخاص بك يا ضياء
    const API_KEY = "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";
    const API_URL = "https://api.groq.com/openai/v1/chat/completions";

    async function sendMessage() {
        const inputField = document.getElementById("userInput");
        const userText = inputField.value.trim();
        if (!userText) return;

        appendMessage("user", userText);
        inputField.value = "";

        try {
            const response = await fetch(API_URL, {
                method: "POST",
                headers: {
                    "Authorization": `Bearer ${API_KEY}`,
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({
                    model: "llama3-8b-8192", // موديل سريع وذكي جداً
                    messages: [
                        { role: "system", content: "أنت Dial، مساعد ذكاء اصطناعي طورك ضياء. ردودك ذكية، سريعة، وباللغة العربية." },
                        { role: "user", content: userText }
                    ]
                })
            });

            const data = await response.json();
            const dialReply = data.choices[0].message.content;
            appendMessage("bot", dialReply);
        } catch (error) {
            appendMessage("bot", "خطأ في الاتصال. تأكد من تشغيل الموقع عبر رابط (Netlify) وليس كملف محلي.");
            console.error("Error:", error);
        }
    }

    function appendMessage(sender, text) {
        const chatBox = document.getElementById("chatBox");
        const msgDiv = document.createElement("div");
        msgDiv.className = `message ${sender}`;
        msgDiv.innerText = text;
        chatBox.appendChild(msgDiv);
        chatBox.scrollTop = chatBox.scrollHeight;
    }
</script>

</body>
